<%= form_for(@book, html:{class: 'form-horizontal'}) do |f| %>
  <%= render 'shared/errors', object: @book %>
  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, autofocus: true, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :author, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :author, autofocus: true, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :pages, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :pages, autofocus: true, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :price, autofocus: true, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image_file_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :image_file_name, autofocus: true, class: "form-control" %>
    </div>
  </div>
  <p>
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', books_path, class: 'btn btn-link' %>
  </p>
<% end %>
