<div id="books">
<% books.each do |book| %>
  <div class="row well">
    <div class="col-sm-2">
      <% if book.book_photos.first.present? %>
        <%= link_to(book) do %>
          <%= image_tag(book.book_photos.first.photo.url(:thumb), alt: 'Billede mangler') %>
        <% end %>
      <% end %>

    </div>
    <div class="col-sm-10">
      <h3 class="book_info">
        <%= link_to(truncate(book.title, length: 35), book) %> <br />
        <small>af: <%=  book.author.titleize %></small>
      </h3>
      <div class="avg_stars">
        <%= render partial: 'average_stars', locals: { book: book } %>
      </div>
    </div>
  </div>
<% end %>
</div>

<div>
  <div class="pull-left page-entries-info">
  <%= page_entries_info books %>
  </div>

  <div class="pull-right">
  <%= paginate books %>
  </div>
</div>