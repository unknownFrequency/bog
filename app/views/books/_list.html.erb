<div id="books">
<% books.each do |book| %>
  <div class="row well">
    <div class="col-sm-2">
      <%= link_to(book) do %>
        <%= image_tag(book.book_photos.first.photo.url(:thumb), alt: 'Billede mangler') %>
      <% end %>
    </div>
    <div class="col-sm-10">
      <h3><%= link_to(book.title, book) %> <small>by <%= book.author %></small></h3>
      <p>
      <%= render partial: 'average_stars', locals: { book: book } %>
      </p>
    </div>
  </div>
<% end %>
</div>

<div>
  <div class="pull-left page-entries-info">
  <%= page_entries_info books %>
  </div>

  <div class="pull-right">
  <%= paginate books %>
  </div>
</div>